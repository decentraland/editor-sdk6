{
  "name": "decentraland-editor",
  "displayName": "Decentraland Editor",
  "description": "Visual Code extension for building Decentraland scenes",
  "version": "0.0.1",
  "publisher": "decentraland",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/decentraland/editor"
  },
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:decentraland.GLTFPreview"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "decentraland.GLTFPreview",
        "displayName": "Preview",
        "selector": [
          {
            "filenamePattern": "*.{gltf,glb}"
          }
        ]
      }
    ],
    "commands": []
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "tsc -w -p ./"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.65.0",
    "eslint": "^8.13.0",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "semi": false
  },
  "dependencies": {
    "@dcl/schemas": "^5.18.1",
    "@dcl/wearable-preview": "^1.12.2"
  }
}
